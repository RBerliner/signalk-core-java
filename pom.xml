			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<!-- Tell Maven when to execute this plugin -->
				<executions>
					<execution>
						<id>make-assembly-jar</id>
						<phase>package</phase>
						<configuration>
							<descriptorRefs>
								<!-- Tell Maven-Assembly to include dependencies in jar -->
								<descriptorId>jar-with-dependencies</descriptorId>
							</descriptorRefs>
							<archive>
								<manifest>
									<!-- Specify class to be run at startup 
									<mainClass>nz.co.fortytwo.signalk.server.SignalKServer</mainClass>-->
								</manifest>
							</archive>
						</configuration>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
